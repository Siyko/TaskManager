<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%if current_user%>
      <% @tasks.each do |task| %>
      <li>
      <%= task.name %>
          <%= link_to 'Show', task %>
          <%= link_to 'Edit', edit_task_path(task) %>
          <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
      <% end %>
    <%end%>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
