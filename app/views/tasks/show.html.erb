<p id="notice"><%= notice %></p>
<section>
  <div class="container">
    <div class="panel panel-default task-table center-div" style="margin:auto">
      <div class="panel-heading"><p id="notice"><%= notice %></p></div>
      <label>Name</label>
      <div class="panel-body"><%= @task.name %></div>
      <label>Description</label>
      <div class="panel-body"><%= @task.description %></div>
      <div class="panel-footer">
        <%= link_to 'Edit', edit_task_path(@task), :class=>"btn btn-default" %> |
        <%= link_to 'Back', tasks_path, :class=>"btn btn-default" %>
      </div>
    </div>
  </div>
</section>
